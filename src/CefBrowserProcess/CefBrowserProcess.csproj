<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <ApplicationIcon>chromium-logo.ico</ApplicationIcon>
    <Authors>Voltstro-Studios</Authors>
    <Company>Voltstro-Studios</Company>
    <Description>Windowless browser process</Description>
    <Copyright>Copyright Â© 2021 Voltstro-Studios</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Utf8Json" Version="1.3.7" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ThirdParty\CefGlue\CefGlue\CefGlue.csproj" />
    <ProjectReference Include="..\ThirdParty\ClrZmq4\ZeroMQ.netcore.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\ThirdParty\Libs\zmq\libzmq.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
    </Content>

    <Content Include="..\ThirdParty\Libs\cef\*.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
    </Content>

    <Content Include="..\ThirdParty\Libs\cef\*.pak">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
    </Content>

    <Content Include="..\ThirdParty\Libs\cef\*.bin">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
    </Content>

    <Content Include="..\ThirdParty\Libs\cef\*.dat">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
    </Content>

    <Content Include="..\ThirdParty\Libs\cef\locales\*.pak">
      <Link>locales\%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
    </Content>

  </ItemGroup>

</Project>
